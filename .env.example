# SVA OAuth Client Environment Configuration
# Copy this file to .env.development or .env.production and update values as needed

# API Configuration
# Base URL for the SVA OAuth API server (should end with /api/auth)
VITE_API_BASE_URL=http://localhost:8001/api/auth

# Backend URL (for OAuth redirects and general backend access)
VITE_BACKEND_URL=http://localhost:8001

# Frontend URL (for OAuth redirect URIs)
# In production, this should be your Cloudflare Pages domain
VITE_FRONTEND_URL=http://localhost:8081

# API Request Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# OAuth Provider Client IDs (optional - can be configured in backend)
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_GITHUB_CLIENT_ID=your-github-client-id

# Application Configuration
VITE_APP_NAME=SVA OAuth Client
VITE_APP_VERSION=1.0.0

# Feature Flags
# Enable debug logging (defaults to true in development)
VITE_ENABLE_DEBUG_LOGS=true

# Enable analytics (defaults to true in production)
VITE_ENABLE_ANALYTICS=false
